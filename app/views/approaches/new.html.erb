<h1>新規アプローチ</h1>
<div class="clearfix">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@approach, url: short_term_goal_approaches_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :content, "アプローチ内容" %>
      <%= f.text_field :content, class: 'form_control' %>
      
      <%= f.select :effectiveness, [['？'], ['◎'], ['〇'], ['△'], ['✖']] %>
          
      <%= f.submit '作成', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>