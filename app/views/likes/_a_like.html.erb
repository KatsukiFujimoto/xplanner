<div id="like-button-a-<%= approach.id %>">
  <% if @like = approach.like_user(current_user.id) %>
    <%= link_to a_like_path(@like), method: :delete, remote: true do %>
      <i class="fas fa-heart red-heart"></i>
    <% end %>
    <span id="like-count-a-<%= approach.id %>">
      <%= link_to approach.likes.count.to_s, likes_path(approach: approach.id) %>
    </span>
  <% else %>
    <%= link_to approach_likes_path(approach), method: :post, remote: true do %>
      <i class="fas fa-heart"></i>
    <% end %>
    <span id="like-count-a-<%= approach.id %>">
      <%= link_to approach.likes.count.to_s, likes_path(approach: approach.id) %>
    </span>
  <% end %>  
</div>

