<% if @like = goal.like_user(current_user.id) %>
  <%= link_to l_like_path(@like), method: :delete, remote: true, id: "like-button-l-#{goal.id}" do %>
    <%= image_tag("red-heart.png", size: '20x20', class: 'red-heart') %>
  <% end %>
  <span id="like-count-l-<%= goal.id %>">
    <%= goal.likes.count.to_s %>
  </span>
<% else %>
  <%= link_to long_term_goal_likes_path(goal), method: :post, remote: true, id: "like-button-l-#{goal.id}" do %>
    <%= image_tag("heart.png", size: '20x20', class: 'heart') %>
  <% end %>
  <span id="like-count-l-<%= goal.id %>">
    <%= goal.likes.count.to_s %>
  </span>
<% end %>

