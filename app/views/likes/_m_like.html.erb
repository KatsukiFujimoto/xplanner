<div id="like-button-m-<%= m_goal.id %>">
  <% if @like = m_goal.like_user(current_user.id) %>
    <%= link_to m_like_path(@like), method: :delete, remote: true do %>
      <i class="fas fa-heart red-heart"></i>
    <% end %>
    <span id="like-count-m-<%= m_goal.id %>">
      <%= link_to m_goal.likes.count.to_s, likes_path(m_goal: m_goal.id) %>
    </span>
  <% else %>
    <%= link_to mid_term_goal_likes_path(m_goal), method: :post, remote: true do %>
      <i class="fas fa-heart"></i>
    <% end %>
    <span id="like-count-m-<%= m_goal.id %>">
      <%= link_to m_goal.likes.count.to_s, likes_path(m_goal: m_goal.id) %>
    </span>
  <% end %>
</div>