<% if @like = m_goal.like_user(current_user.id) %>
  <%= link_to m_like_path(@like), method: :delete, remote: true, id: "like-button-m-#{m_goal.id}" do %>
    <%= image_tag("red-heart.png", size: '20x20', class: 'red-heart') %>
  <% end %>
  <span id="like-count-m-<%= m_goal.id %>">
    <%= m_goal.likes.count.to_s %>
  </span>
<% else %>
  <%= link_to mid_term_goal_likes_path(m_goal), method: :post, remote: true, id: "like-button-m-#{m_goal.id}" do %>
    <%= image_tag("heart.png", size: '20x20', class: 'heart') %>
  <% end %>
  <span id="like-count-m-<%= m_goal.id %>">
    <%= m_goal.likes.count.to_s %>
  </span>
<% end %>

