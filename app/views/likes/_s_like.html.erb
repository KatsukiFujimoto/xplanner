<div id="like-button-s-<%= s_goal.id %>">
  <% if @like = s_goal.like_user(current_user.id) %>
    <%= link_to s_like_path(@like), method: :delete, remote: true do %>
      <i class="fas fa-heart red-heart"></i>
    <% end %>
    <span id="like-count-s-<%= s_goal.id %>">
      <%= link_to s_goal.likes.count.to_s, likes_path(s_goal: s_goal.id) %>
    </span>
  <% else %>
    <%= link_to short_term_goal_likes_path(s_goal), method: :post, remote: true do %>
      <i class="fas fa-heart"></i>
    <% end %>
    <span id="like-count-s-<%= s_goal.id %>">
      <%= link_to s_goal.likes.count.to_s, likes_path(s_goal: s_goal.id) %>
    </span>
  <% end %>  
</div>
