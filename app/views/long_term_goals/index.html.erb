<div class="row">
  <aside class="col-md-3 user-sidebar">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %><br clear = "">
        <%= link_to @user.name, user_long_term_goals_path(@user), data: {"turbolinks" => false} %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section class="follow-button">
      <%= render 'users/follow_form' if logged_in? %>
    </section>
    <section>
      <p class="center">通知</p>
      <p class="center">メッセージ</p>
      <p class="center">X Room一覧</p>
    </section>
    <section>
      <input type="text" placeholder="X Room検索">
      <%= form_tag users_path, :method => 'get' do %>
        <p>
          <%= text_field_tag :search, params[:search], class: 'search_user', placeholder: 'ユーザー検索' %>
          <%= submit_tag "Search", :name => nil, class: 'search_user_btn' %>
        </p>
      <% end %>
      <input type="text" placeholder="目標検索">
    </section>
  </aside>
  <div class="col-md-9">
  <% if @user == current_user %>
    <h3 class="center new-l-goal">長期目標リスト<%= link_to "新規長期目標", new_user_long_term_goal_path, class: "new-l-goal" %></h3>
    <table class="table table-bordered table-sortable ui-sortable">
  <% else %>
    <h3 class="center new-l-goal">長期目標リスト</h3>
    <table class="table">
  <% end %>
      <thead>
        <tr>
          <th>目標期限</th>
          <th>カテゴリー</th>
          <th>目標内容</th>
        <% if @user == current_user %>
          <th></th>
        <% end %>
        </tr>
      </thead>
      <tbody>
      <% @long_term_goals.each do |goal| %>
        <%= content_tag "tr", class: "item", data: { model_name: goal.class.name.underscore, update_url: long_term_goal_sort_path(goal) } do %>
            <td><%= %></td>
            <td><%= goal.category %></td>
            <td><%= link_to goal.content, long_term_goal_mid_term_goals_path(goal), data: { "turbolinks" => false } %></td>
          <% if @user == current_user %>
            <td>
              <%= link_to '編集', edit_long_term_goal_path(goal) %>
              <%= link_to '削除', long_term_goal_path(goal), method: :delete,
                data: { confirm: "本当に削除しますか？" } %>
            </td>
          <% end %>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>