<div class="row l-goal-show-container">
  <div class="col-md-10 col-md-offset-1">
    <section class="user-data data1">
      <section class="user_info">
        <h2>
          <%= gravatar_for @user %><br clear = "">
          <%= link_to @user.name, user_long_term_goals_path(@user), data: {"turbolinks" => false} %>
        </h2>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="follow-button">
        <%= render 'users/follow_form' if logged_in? %>
      </section>
    </section>
    
    <section class="user-data data2">
      <p class="center">通知</p>
      <p class="center">メッセージ</p>
      <p class="center">X Room一覧</p>
    </section>
    <section class="user-data data3">
      <input type="text" placeholder="X Room検索">
      <%= form_tag users_path, :method => 'get' do %>
        <p>
          <%= text_field_tag :search, params[:search], class: 'search_user', placeholder: 'ユーザー検索' %>
          <%= submit_tag "Search", :name => nil, class: 'search_user_btn' %>
        </p>
      <% end %>
      <input type="text" placeholder="目標検索">
    </section>
  </div>
</div>
<h1><%= @long_term_goal.category %><span>|</span><%= @long_term_goal.content %></h1>
<p><%= link_to "新規中期目標", new_long_term_goal_mid_term_goal_path(@long_term_goal) %></p>
<div class="row">
  <div class="table table-bordered table-sortable ui-sortable">
    <% @mid_term_goals.each do |goal| %>
      <%= content_tag "div", class: "item", data: { model_name: goal.class.name.underscore, update_url: mid_term_goal_sort_path(goal) } do %>
        <div>
          <section>
            <%= goal.content %><br />
            <span>期限</span><br />
            <span>コメント</span><br />
            <span>いいね</span><br />
            <%= link_to '編集', edit_mid_term_goal_path(goal) %>
            <%= link_to '削除', mid_term_goal_path(goal), method: :delete,
              data: { confirm: "本当に削除しますか？" } %><br />
            <%= link_to '新規短期目標', '#' %>
          </section>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
