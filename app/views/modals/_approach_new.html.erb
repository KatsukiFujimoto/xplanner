<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@approach, url: short_term_goal_approaches_path, remote: true) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">新規アプローチ</h4>
        <%= render 'shared/error_messages', object: f.object %>
      </div>
      <div class="modal-body">
        <div class="field">
          <%= f.hidden_field :user_id, value: current_user.id %>
          
          <%= f.label :content, 'アプローチ内容' %>
          <%= f.text_field :content, class: 'form-control' %>
          
          <%= f.select :status, [['未達成'], ['実行中'], ['達成済み']] %>
          
          <%= f.select :effectiveness, [['？'], ['◎'], ['〇'], ['△'], ['✖']] %>
          
          <%= f.fields_for :deadline do |deadline_f| %>
             
            <%= deadline_f.label :date %>
            <%= deadline_f.date_field :date, class: 'form-control' %>

          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <!--<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>-->
        <%= f.submit "作成", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>