<% m_goal = @mid_term_goal %>
<div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">中期目標：<%= m_goal.content %></h4>
      </div>
      <div class="modal-body">
        <h5>短期目標一覧</h5>
      <% if current_user == @user %><!-- 他ユーザーのページにいるなら -->
        <section class="table-sortable ui-sortable clearfix">
      <% else %>
        <section class="clearfix">
      <% end %>
          <div class="<%= m_goal.id %>-s-index">
            <%= render 'mid_term_goals/s_goal', m_goal: m_goal %>
          </div>
        </section>          
      </div>
  </div>
</div>