<h1>新規短期目標</h1>
<div class="clearfix">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@short_term_goal, url: mid_term_goal_short_term_goals_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :content, "目標内容" %>
      <%= f.text_field :content, class: 'form-control' %>
      
      <%= f.select :status, [['未達成'], ['実行中'], ['達成済み']] %>
      
      <%= f.submit '作成', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>